<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naturalborncamper.lyndalocaldatastorage.FileActivity">

    <TextView
        android:id="@+id/outputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="onCreateButtonClick"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/readButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="onReadButtonClick"
        android:text="Read"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/createButton"
        app:layout_constraintRight_toLeftOf="@+id/deleteButton" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="onDeleteButtonClick"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/createExternalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCreateExternalButtonClick"
        android:layout_marginBottom="8dp"
        android:text="Create Ext"
        app:layout_constraintBottom_toTopOf="@+id/createButton"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/readExternalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReadExternalButtonClick"
        android:layout_marginBottom="8dp"
        android:text="Read Ext"
        app:layout_constraintBottom_toTopOf="@+id/readButton"
        app:layout_constraintLeft_toRightOf="@+id/createExternalButton"
        app:layout_constraintRight_toLeftOf="@+id/deleteExternalButton" />

    <Button
        android:id="@+id/deleteExternalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onDeleteExternalButtonClick"
        android:layout_marginBottom="8dp"
        android:text="Delete Ext"
        app:layout_constraintBottom_toTopOf="@+id/deleteButton"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
